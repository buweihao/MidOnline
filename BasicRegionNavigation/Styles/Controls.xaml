<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 顶部导航按钮样式 -->
    <Style x:Key="NavToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="#00cad9"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="25,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <StackPanel>
                        <ContentPresenter HorizontalAlignment="Center"/>
                        <Rectangle x:Name="Underline" Height="0.5" Fill="#00ff89" Visibility="Collapsed" Margin="0,2,0,0"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- 控制选中状态显示下划线 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Underline" Property="Visibility" Value="Visible"/>
                            <Setter Property="Foreground" Value="#e9c602"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- 二级导航按钮样式 -->
    <Style x:Key="Nav2ToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="Gray"/>
        <!-- 默认灰色 -->
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="0,0,50,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <StackPanel>
                        <ContentPresenter HorizontalAlignment="Center"/>
                        <!-- 下划线不再使用 -->
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- 被选中时字体颜色红色 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Foreground" Value="#00cad9"/>
                        </Trigger>
                        <!-- 鼠标悬停变白 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!-- 顶部导航按钮样式 -->
    <Style x:Key="NavToggleBButtonStyle" TargetType="ToggleButton">
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="25,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <StackPanel>
                        <ContentPresenter HorizontalAlignment="Center"/>
                        <Rectangle x:Name="Underline" Height="0.5" Fill="#409efe" Visibility="Collapsed" Margin="0,2,0,0"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- 控制选中状态显示下划线 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Underline" Property="Visibility" Value="Visible"/>
                            <Setter Property="Foreground" Value="#409efe"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>