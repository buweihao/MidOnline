<UserControl x:Class="BasicRegionNavigation.Controls.AddUserDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol">
    <Border CornerRadius="10"
            Width="350"
            Height="300"
            Background="#E0FFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Content="添加用户" Width="350"></Label>
            <!-- 用户输入表单 -->
            <StackPanel Margin="20"
                        Grid.Row="1"
                        VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="姓名："
                               Width="80"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="部门："
                               Width="80"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding Department, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="角色："
                               Width="80"
                               VerticalAlignment="Center" />
                    <ComboBox Width="200"
                              ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding Role, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="电话："
                               Width="80"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="邮箱："
                               Width="80"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="密码："
                               Width="80"
                               VerticalAlignment="Center" />
                    <PasswordBox Width="200"
                                 PasswordChanged="PasswordBox_PasswordChanged" />
                </StackPanel>

            </StackPanel>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10">
                <Button Content="确认"
                        FontSize="15"
                        Width="80"
                        Height="30"
                        Command="{Binding ConfirmCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding ConfirmParameter, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                <Button Width="22"
                        Height="22"
                        Command="hc:ControlCommands.Close"
                        Style="{StaticResource ButtonIcon}"
                        Foreground="{DynamicResource PrimaryBrush}"
                        hc:IconElement.Geometry="{StaticResource ErrorGeometry}"
                        Padding="0"
                        Margin="10,0,0,0" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

