<UserControl x:Class="BasicRegionNavigation.Controls.ConnectUnit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BasicRegionNavigation.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800" >
    <Border BorderThickness="2"
            Margin="0,0,0,0"
            Height="140" 
            Background="#162330"
            CornerRadius="8">
        <Canvas Background="#162330" >

            <!-- 上料 -->
            <Grid Canvas.Left="0"
                  Canvas.Top="0"
                  Width="250"
                  Height="180">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image Source="/Resources/TopSupplyer.png"
                       Margin="40,-50,40,40" />
                <TextBlock Grid.Row="1" Margin="0,-160,0,0"
                           Text="上料1    上料2"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="15" />
            </Grid>

            <!-- 下料 -->
            <Grid Canvas.Left="300"
                  Canvas.Top="0"
                  Width="250"
                  Height="180">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image Source="/Resources/DownSupplyer.png"
                       Margin="40,-50,40,40"  />
                <TextBlock Grid.Row="1"
                           Margin="0,-160,0,0"
                           Text="下料1    下料2"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="15" />
            </Grid>

            <!-- 翻转台 -->
            <Grid Canvas.Left="600"
                  Canvas.Top="0"
                  Width="250"
                  Height="180">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image Source="/Resources/TurnPanel.png"
                       Margin="40,-50,40,40"  />
                <TextBlock Grid.Row="1"
                           Margin="0,-160,0,0"
                           Text="翻转台"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="15" />
            </Grid>

            <!-- 墩子 -->
            <Grid Canvas.Left="900"
                  Canvas.Top="0"
                  Width="250"
                  Height="180">
                <Grid.RowDefinitions>
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Image Source="/Resources/DModel.png"
                       Margin="40,-50,40,40" />
                <TextBlock Grid.Row="1"
                           Text="墩子"
                           Margin="0,-160,0,0"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="15" />
            </Grid>

            <!-- 模组标题 -->
            <TextBlock Canvas.Left="1220"
                       Canvas.Top="40"
                       Width="250"
                       Height="200"
                       Text="{Binding ModuleTitle,
                          RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18" />
            <!-- 水平线 -->
            <Line X1="-102"
                  Y1="-40"
                  X2="1020"
                  Y2="-40"
                  Stroke="Green"
                  StrokeThickness="4" />

            <!-- 垂直线 -->
            <local:LineWithImage ImageLeft="50"
                                 ImageTop="-30"
                                 X1="80"
                                 Y1="-40"
                                 X2="80"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorUpLoad1, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <local:LineWithImage ImageLeft="150"
                                 ImageTop="-30"
                                 X1="180"
                                 Y1="-40"
                                 X2="180"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorUpLoad2, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <local:LineWithImage ImageLeft="350"
                                 ImageTop="-30"
                                 X1="380"
                                 Y1="-40"
                                 X2="380"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorDnLoad1, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <local:LineWithImage ImageLeft="450"
                                 ImageTop="-30"
                                 X1="480"
                                 Y1="-40"
                                 X2="480"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorDnLoad2, RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <local:LineWithImage ImageLeft="690"
                                 ImageTop="-30"
                                 X1="720"
                                 Y1="-40"
                                 X2="720"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorBatch,   RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <local:LineWithImage ImageLeft="990"
                                 ImageTop="-30"
                                 X1="1020"
                                 Y1="-40"
                                 X2="1020"
                                 Y2="40"
                                 Stroke="{Binding Model1LineColorAround,  RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}"
                                 StrokeThickness="4" />
            <Line X1="-100"
                  Y1="-40"
                  X2="-100"
                  Y2="100"
                      Stroke="Green"
                      StrokeThickness="4"
                      StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round"
                  Visibility="{Binding LineVisibility,  RelativeSource={RelativeSource AncestorType={x:Type local:ConnectUnit}}}" />

        </Canvas>
    </Border>
</UserControl>
