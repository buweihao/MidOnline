<UserControl x:Class="BasicRegionNavigation.Views.Productivity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"        
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="1.05*" />
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="1.05*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            <!-- 项目号 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="项目号" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding ProjectList}"
                     SelectedItem="{Binding SelectedProject}"  />
            </StackPanel>

            <!-- 设备模组 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                <TextBlock Text="设备模组" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding MouduleList}"
                     SelectedItem="{Binding SelectedMoudule}" />
            </StackPanel>
            <!-- 设备编号 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5">
                <TextBlock Text="设备编号" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding DeviceIdList}"
                     SelectedItem="{Binding SelectedDeviceId}" />
            </StackPanel>

            <!-- 产品类型 -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="5">
                <TextBlock Text="产品类型" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding ProductTypeList}"
                     SelectedItem="{Binding SelectedProductType}" />
            </StackPanel>

            <!-- 原料类别 -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="5">
                <TextBlock Text="原料类别" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding RawMaterialList}"
                     SelectedItem="{Binding SelectedRawMaterial}" />
            </StackPanel>

            <!-- 阳极类型 -->
            <StackPanel Grid.Column="5" Orientation="Horizontal" Margin="5">
                <TextBlock Text="阳极类型" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding AnodeTypeList}"
                     SelectedItem="{Binding SelectedAnodeType}" />
            </StackPanel>

            <!-- 时间单位 -->
            <StackPanel Grid.Column="6" Orientation="Horizontal" Margin="5">
                <TextBlock Text="时间单位" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     Style="{StaticResource ComboBoxExtend}"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding TimeList}"
                     SelectedItem="{Binding SelectedTime}" />
            </StackPanel>

            <!-- 时间范围 -->
            <StackPanel Grid.Column="7" Orientation="Horizontal" Margin="5">
                <TextBlock  Text="时间范围" Height="30" Background="Transparent" Foreground="White" Margin="12,15"/>
            </StackPanel>
            <!-- 时间范围 -->
            <hc:DateTimePicker Grid.Column="8" Height="30" DateTimeFormat="yyyy-MM-dd HH:mm:ss" hc:InfoElement.Placeholder="开始时间" hc:InfoElement.ShowClearButton="True"
                     SelectedDateTime="{Binding Start}"   Margin="10,0" />
            <TextBlock Grid.Column="9" Text="至" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontSize="14"/>
            <hc:DateTimePicker Grid.Column="10" Height="30" DateTimeFormat="yyyy-MM-dd HH:mm:ss" 
                    SelectedDateTime="{Binding End}"     Margin="10,0" />

            <!-- 查询按钮 -->
            <Button Grid.Row="1" Grid.Column="11" Content="查询" Width="70" Height="30"
            Background="#2288FF" Foreground="White" BorderThickness="0" Command="{Binding QueryCommand}" />

            <!-- 重置按钮 -->
            <Button Grid.Row="1" Grid.Column="12" Content="重置" Width="70" Height="30"
            Background="White" Foreground="Black" BorderThickness="0" Command="{Binding ResetCommand}"/>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <lvc:CartesianChart Series="{Binding Series}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}"
                            LegendPosition="Hidden"
                            Background="#1E2A38"

                            ZoomMode="None"
                            DrawMarginFrame="{x:Null}" />
            <Border Grid.Row="1" Background="#1e2a38">
            <TextBlock   Text="日产能统计" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
            </Border>
        </Grid>
        <Grid Grid.Row="2" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="0.8*"/>
            </Grid.RowDefinitions>
            <lvc:CartesianChart Series="{Binding Series_Down}"
                            XAxes="{Binding XAxes_Down}"
                            YAxes="{Binding YAxes_Down}"
                            LegendPosition="Hidden"
                            Background="#1E2A38"
                            Padding="0,0,0,0" Margin="0,0,0,0"
                            ZoomMode="None"
                            DrawMarginFrame="{x:Null}" />
            <Border Grid.Row="1" Background="#1e2a38">
                <TextBlock   Text="上挂率趋势" FontSize="16" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
