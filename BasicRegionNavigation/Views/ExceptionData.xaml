<UserControl x:Class="BasicRegionNavigation.Views.ExceptionData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:con="clr-namespace:BasicRegionNavigation.Controls"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <UserControl.Resources>
        <Style x:Key="SectionHeaderStyle" TargetType="ContentControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContentControl">
                        <Border CornerRadius="6,6,0,0" Background="#2e3a44">
                            <TextBlock Text="{TemplateBinding Content}" 
                               Margin="0,5,0,6"
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Padding="4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WhiteHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <!--<Setter Property="FontWeight" Value="Bold"/>-->
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridColumnHeader">
                        <Grid>
                            <ContentPresenter 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />
                            <!-- 添加底部白线 -->
                            <Border BorderBrush="White"
                                BorderThickness="0,0,0,1"
                                VerticalAlignment="Bottom" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.4*" />
                <ColumnDefinition Width="1.05*" />
                <ColumnDefinition Width="0.1*" />
                <ColumnDefinition Width="1.05*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <!-- 项目号 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5">
                <TextBlock Text="设备模组" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding ModuleList}"
                     SelectedItem="{Binding SelectModule}"
                      />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="5">
                <TextBlock Text="时间单位" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
                <hc:ComboBox Width="90" Height="30"
                     hc:InfoElement.Placeholder="请选择..."
                     ItemsSource="{Binding UnitList}"
                     SelectedItem="{Binding SelectedUnit}"
                             />
            </StackPanel>


            <!-- 时间范围 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="5">
                <TextBlock Text="时间范围" Height="30" Background="Transparent" Foreground="White" Margin="10,15"/>
            </StackPanel>
            <!-- 时间范围 -->
            <hc:DateTimePicker Grid.Column="3" Height="30" DateTimeFormat="yyyy-MM-dd HH:mm:ss" hc:InfoElement.Placeholder="开始时间" hc:InfoElement.ShowClearButton="True"
                        Margin="10,0" SelectedDateTime="{Binding Start}"/>
            <TextBlock Grid.Column="4" Text="至" VerticalAlignment="Center" Foreground="White" HorizontalAlignment="Center" FontSize="14"/>
            <hc:DateTimePicker Grid.Column="5" Height="30" DateTimeFormat="yyyy-MM-dd HH:mm:ss" 
                        Margin="10,0" SelectedDateTime="{Binding End}"/>

            <!-- 查询按钮 -->
            <Button Grid.Row="1" Grid.Column="6" Content="查询" Width="70" Height="30"
            Background="#2288FF" Foreground="White" BorderThickness="0" Command="{Binding QueryCommand}"/>

            <!-- 重置按钮 -->
            <Button Grid.Row="1" Grid.Column="7" Content="导出" Width="70" Height="30" Command="{Binding ExportCommand}"
            Background="White" Foreground="Black" BorderThickness="0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <con:PieChartCard   Title="上挂异常比例"  
                            />
            <Border Grid.Row="0" Grid.Column="1" Background="#232f3a" Margin="10" CornerRadius="6" Padding="5" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.4*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="10*"/>
                    </Grid.RowDefinitions>
                    <ContentControl Content="上挂异常趋势图" Style="{StaticResource SectionHeaderStyle}" />
                    <Border Background="#1E2A38" Grid.Row="1">
                        <TextBlock Text="异常趋势分析" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <lvc:CartesianChart x:Name="myChart" Series="{Binding ASeries}" Grid.Row="2"
                   XAxes="{Binding AXAxes}" 
                   YAxes="{Binding AYAxes}"
                    LegendPosition="Top"
                    Background="#1E2A38"
                    DrawMarginFrame="{x:Null}">
                    </lvc:CartesianChart>
                </Grid>

            </Border>
            <Border  Grid.Row="1" Grid.Column="0" Background="#232f3a"  Margin="10" CornerRadius="6" Padding="5" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Content="上挂异常明细表" Style="{StaticResource SectionHeaderStyle}" />

                    <DataGrid Grid.Row="1"
          ItemsSource="{Binding AbnormalList}" 
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          IsReadOnly="True"
          Background="#1e2a38"
          Foreground="White"
          BorderBrush="#232f3a"
          AlternatingRowBackground="#2C3E50"
          RowBackground="#22313F"
          ColumnHeaderHeight="40"
          FontSize="14"
                          
          GridLinesVisibility="None"
          ColumnHeaderStyle="{StaticResource WhiteHeaderStyle}"
          HorizontalScrollBarVisibility="Auto"
          VerticalScrollBarVisibility="Auto">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Foreground" Value="White" />
                                <!-- 默认绿色 -->
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="MediumPurple" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderThickness" Value="0" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style x:Key="CenterCellStyle" TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="设备名称" Binding="{Binding DeviceName}" Width="1.3*" 
                            ElementStyle="{StaticResource CenterCellStyle}" />
                            <DataGridTextColumn Header="混料" Binding="{Binding Mix}" Width="*" 
                            ElementStyle="{StaticResource CenterCellStyle}" />
                            <DataGridTextColumn Header="扫码NG" Binding="{Binding ScanNg}" Width="*" 
                            ElementStyle="{StaticResource CenterCellStyle}" />
                            <DataGridTextColumn Header="系统反馈" Binding="{Binding SystemFeedback}" Width="*" 
                            ElementStyle="{StaticResource CenterCellStyle}" />
                            <DataGridTextColumn Header="物料丢失" Binding="{Binding MaterialLost}" Width="*" 
                            ElementStyle="{StaticResource CenterCellStyle}" />
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </Border>
            <Border Grid.Row="1"  Grid.Column="1" Background="#232f3a" Margin="10" CornerRadius="6" Padding="5" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>

                    <ContentControl Content="上挂异常柱状图" Style="{StaticResource SectionHeaderStyle}" />
                    <Grid Background="#1E2A38" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="异常类型分布" Grid.Row="0"
               Foreground="White"
               FontSize="18"
               FontWeight="Bold"
                                   Margin="0,5"
                                   HorizontalAlignment="Center"
                                   />

                        <lvc:CartesianChart Grid.Row="1"
                        Series="{Binding Series}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}"
                        LegendPosition="Hidden"
                        Background="#1E2A38"
                                            
                        DrawMarginFrame="{x:Null}" />
                    </Grid>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
