<UserControl x:Class="BasicRegionNavigation.Views.ComMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:con="clr-namespace:BasicRegionNavigation.Controls"
             xmlns:local="clr-namespace:BasicRegionNavigation.Views"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- 模块1 -->
        <Button Panel.ZIndex="100" Command="{Binding InsertCommand}" Height="50" Width="200" Content="清空并插入测试数据" Foreground="Orange" Background="Black" Visibility="Collapsed" />   
        <TextBlock  Text="通讯监控"  Foreground="White" FontSize="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <StackPanel x:Name="AllModel" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5"  Background="Transparent" Margin="0,20,0,0" VerticalAlignment="Center">
            <con:ConnectUnit x:Name="Model1"  ModuleTitle="{Binding Model1RawType}" 
                             Model1LineColorUpLoad1="{Binding Model1LineColorUpLoad1}"
                             Model1LineColorUpLoad2="{Binding Model1LineColorUpLoad2}"
                             Model1LineColorDnLoad1="{Binding Model1LineColorDnLoad1}"
                             Model1LineColorDnLoad2="{Binding Model1LineColorDnLoad2}"
                             Model1LineColorBatch="{Binding Model1LineColorBatch}"
                              Model1LineColorAround="{Binding Model1LineColorAround}" ></con:ConnectUnit>
            <con:ConnectUnit x:Name="Model2" ModuleTitle="{Binding Model2RawType}"
                             Model1LineColorUpLoad1="{Binding Model2LineColorUpLoad1}"
                             Model1LineColorUpLoad2="{Binding Model2LineColorUpLoad2}"
                             Model1LineColorDnLoad1="{Binding Model2LineColorDnLoad1}"
                             Model1LineColorDnLoad2="{Binding Model2LineColorDnLoad2}"
                             Model1LineColorBatch="{Binding Model2LineColorBatch}"
                             Model1LineColorAround="{Binding Model2LineColorAround}"></con:ConnectUnit>

            <!--<con:ConnectUnit x:Name="Model3"  ModuleTitle="{Binding Model3RawType}" 
                             Model1LineColorUpLoad1="{Binding Model3LineColorUpLoad1}"
                             Model1LineColorUpLoad2="{Binding Model3LineColorUpLoad2}"
                             Model1LineColorDnLoad1="{Binding Model3LineColorDnLoad1}"
                             Model1LineColorDnLoad2="{Binding Model3LineColorDnLoad2}"
                             Model1LineColorBatch="{Binding Model3LineColorBatch}"
                             Model1LineColorAround="{Binding Model3LineColorAround}"></con:ConnectUnit>
            <con:ConnectUnit x:Name="Model4" ModuleTitle="{Binding Model4RawType}"
                              Model1LineColorUpLoad1="{Binding Model4LineColorUpLoad1}"
                              Model1LineColorUpLoad2="{Binding Model4LineColorUpLoad2}"
                              Model1LineColorDnLoad1="{Binding Model4LineColorDnLoad1}"
                              Model1LineColorDnLoad2="{Binding Model4LineColorDnLoad2}"
                              Model1LineColorBatch="{Binding   Model4LineColorBatch}"
                              Model1LineColorAround="{Binding  Model4LineColorAround}" ></con:ConnectUnit>
            <con:ConnectUnit x:Name="Model5"  ModuleTitle="{Binding Model5RawType}"
                              Model1LineColorUpLoad1="{Binding Model5LineColorUpLoad1}"
                              Model1LineColorUpLoad2="{Binding Model5LineColorUpLoad2}"
                              Model1LineColorDnLoad1="{Binding Model5LineColorDnLoad1}"
                              Model1LineColorDnLoad2="{Binding Model5LineColorDnLoad2}"
                              Model1LineColorBatch="{Binding   Model5LineColorBatch}"
                              Model1LineColorAround="{Binding  Model5LineColorAround}" ></con:ConnectUnit>
            <con:ConnectUnit x:Name="Model6" ModuleTitle="{Binding Model6RawType}"
                              Model1LineColorUpLoad1="{Binding Model6LineColorUpLoad1}"
                              Model1LineColorUpLoad2="{Binding Model6LineColorUpLoad2}"
                              Model1LineColorDnLoad1="{Binding Model6LineColorDnLoad1}"
                              Model1LineColorDnLoad2="{Binding Model6LineColorDnLoad2}"
                              Model1LineColorBatch="{Binding   Model6LineColorBatch}"
                              Model1LineColorAround="{Binding  Model6LineColorAround}" ></con:ConnectUnit>-->
        </StackPanel>
        <Canvas Grid.Row="1"
                Grid.Column="0"
                Grid.RowSpan="3" Background="Transparent">
            <Line X1="270"
                  Y1="403"
                  X2="370"
                  Y2="403"
                  Stroke="Green"
                  StrokeThickness="4"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round" />
            <Line X1="370"
                  Y1="353"
                  X2="370"
                  Y2="403"
                  Stroke="Green"
                  StrokeThickness="4"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round" />
        </Canvas>

        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="3"  Margin="10">
            <Image Source="/Resources/Computer.png" Margin="50,0,200,0"/>
        </Border>

    </Grid>

            
</UserControl>
